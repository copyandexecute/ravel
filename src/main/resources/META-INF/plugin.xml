<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>lol.bai.ravel</id>
    <name>Ravel Remapper</name>
    <vendor>deirn.bai.lol</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <depends optional="true" config-file="lol.bai.ravel-withKotlin.xml">
        org.jetbrains.kotlin
    </depends>

    <resource-bundle>messages.RavelBundle</resource-bundle>

    <actions>
        <action id="lol.bai.ravel.ui.RemapperAction"
                class="lol.bai.ravel.ui.RemapperAction"
                icon="/icons/pluginAction.svg">
            <add-to-group group-id="RefactoringMenu"/>
        </action>

        <action id="lol.bai.ravel.ui.RemapperDialog$MarkAllAction"
                class="lol.bai.ravel.ui.RemapperDialog$MarkAllAction"
                icon="AllIcons.Actions.AddList"/>

        <action id="lol.bai.ravel.ui.RemapperDialog$MarkAction"
                class="lol.bai.ravel.ui.RemapperDialog$MarkAction"
                icon="AllIcons.General.Add"/>

        <action id="lol.bai.ravel.ui.RemapperDialog$UnMarkAction"
                class="lol.bai.ravel.ui.RemapperDialog$UnMarkAction"
                icon="AllIcons.General.Remove"/>
    </actions>

    <extensionPoints>
        <extensionPoint name="remapper"
                        beanClass="lol.bai.ravel.remapper.RemapperBean"
                        dynamic="true">
            <with attribute="implementation" implements="lol.bai.ravel.remapper.Remapper"/>
        </extensionPoint>
    </extensionPoints>

    <extensions defaultExtensionNs="lol.bai.ravel">
        <remapper id="mixin"
                  implementation="lol.bai.ravel.remapper.MixinRemapper"
                  order="first"/>

        <remapper id="java"
                  implementation="lol.bai.ravel.remapper.JavaRemapper"/>

        <remapper id="class-tweaker"
                  implementation="lol.bai.ravel.remapper.ClassTweakerRemapper"/>
    </extensions>
</idea-plugin>
